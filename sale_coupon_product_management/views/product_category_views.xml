<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_category_form_view" model="ir.ui.view">
        <field name="name">product.category.form.program.option</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view" />
        <field name="arch" type="xml">
            <field name="parent_id" position="after">
                <field name="is_promotion_category" />
                <field name="is_coupon_category" />
                <field
                    name="default_promotion_next_order_category"
                    attrs="{'invisible': [('is_promotion_category', '=', False)]}"
                />
                <field
                    name="program_option_ids"
                    widget="many2many_tags"
                    attrs="{'invisible': [('is_promotion_category', '=', False), ('is_coupon_category', '=', False)]}"
                    options="{'no_create_edit': True, 'no_quick_create': True}"
                />
            </field>
        </field>
    </record>
</odoo>
